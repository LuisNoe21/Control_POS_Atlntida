<% include partials/_headercat %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-9">
      <table class="table table-bordered table-striped text-center mt-4">
        <thead>
          <tr>
           <td><b>Id</b></td></b>
            <td><b>Clientes</b></td>
            <td><b>Telefono</b></td>
             <td><b>Opciones</b></td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].cliente %></td>
                <td><%= data[i].telefono %></td>
                <td>
                  <a  href="/clientes/updatem/<%= data[i].id %>" class="btn btn-warning">Actualizar</a>
                  <a style="margin-top: 2px; background-color: red;" href="/clientes/deletem/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div style="margin-top: 3%;" class="col-md-3">
     

        
        <form action="/clientes/addm" method="POST">
          <p style="text-align: center;"><b>CREAR NUEVO CLIENTE</p></b>
    <hr></hr>
          <div   class="form-group">
            <input type="text" name="cliente" placeholder="Nombre de Cliente" class="form-control" required="required" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="telefono" placeholder="Telefono del Cliente" class="form-control" required="required">
          </div>

          <button style="background-color: green;" type="submit" class="btn btn-primary">
            Guardar Cliente
          </button>
        </form>
      </div>
    </div>
 
</div>


